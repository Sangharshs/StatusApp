<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SingleEnglishQuoteActivity">
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@drawable/bordersq"
        android:layout_width="match_parent"
        android:id="@+id/swipelayout"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <RelativeLayout
        android:id="@+id/shareLayout_with_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="6dp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/www"
        android:layout_height="wrap_content">
        <TextView
            android:padding="2dp"
            android:textSize="23sp"
            android:gravity="center|center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/single_quote"/>
    </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/horizontal_images"
        android:id="@+id/linear"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:id="@+id/copy_quote"
            app:cardElevation="5dp"
            android:focusable="true"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="30dp"
                android:background="@drawable/ic_baseline_file_copy_24"
                android:layout_gravity="center"
                android:layout_height="30dp">

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            app:cardElevation="5dp"
            android:id="@+id/share_fb"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:background="@drawable/ic"
                android:layout_height="50dp">

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:id="@+id/share_insta"
            app:cardElevation="5dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:background="@drawable/insta"
                android:layout_height="50dp">

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:id="@+id/share_wh"
            app:cardElevation="5dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:background="@drawable/wh"
                android:layout_height="50dp">

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:id="@+id/share_share"
            app:cardElevation="5dp"
            android:focusable="true"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="40dp"
                android:background="@drawable/sh"
                android:layout_gravity="center"
                android:layout_height="40dp">

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>